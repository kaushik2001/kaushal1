            android:layout_marginLeft="@dimen/_5sdp"


            android:layout_marginTop="@dimen/_76sdp"/>


        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_130sdp"
            android:src="@drawable/notice"
