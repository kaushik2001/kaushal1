            android:layout_below="@+id/img1"

            android:layout_marginLeft="@dimen/_5sdp"


           />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_130sdp"
        android:src="@drawable/notice"
        android:scaleType="fitXY"
